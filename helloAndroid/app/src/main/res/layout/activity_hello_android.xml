<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.helloandroid.HelloAndroid">

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/ud_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingTop="0dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/businessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:fontFamily="@android:roboto"
        android:textSize="34sp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:text="Udacity"
        />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/businessName"
        android:fontFamily="@android:roboto"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:text="2465 Latham St \nMountain View, CA 94043"
        />
    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:fontFamily="@android:roboto"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:text="650-555-5555"
        />
</RelativeLayout>
